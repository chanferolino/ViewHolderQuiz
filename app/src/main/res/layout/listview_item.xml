<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgViewCover"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/txtName"
        android:layout_alignTop="@+id/imgViewCover"
        android:layout_toRightOf="@+id/imgViewCover"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/txtGenre"
        android:layout_alignBottom="@+id/imgViewCover"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/txtDescription"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txtGenre"
        android:layout_alignLeft="@+id/imgViewCover"
        android:layout_alignStart="@+id/imgViewCover"
        android:layout_alignRight="@+id/txtGenre"
        android:layout_alignEnd="@+id/txtGenre" />
</RelativeLayout>